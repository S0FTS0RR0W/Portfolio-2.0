---
const { username = "S0FTS0RR0W" } = Astro.props;

let repos = [];
try {
  const res = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=6`);
  repos = await res.json();
  if (!Array.isArray(repos)) repos = [];
} catch (error) {
  console.error("Error fetching GitHub repos:", error);
}
---

<section id="projects" class="github-projects">
  <div class="container">
    <h2>Latest Projects</h2>
    <div class="grid">
      {repos.map((repo, index) => (
        <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="card" style={`--delay: ${index * 100}ms`}>
          <div class="image-wrapper">
            <img 
              src={`https://opengraph.githubassets.com/1/${username}/${repo.name}`} 
              alt={`Cover for ${repo.name}`} 
              loading="lazy"
            />
          </div>
          <div class="content">
            <h3>{repo.name}</h3>
            <p>{repo.description || "No description provided."}</p>
            <div class="meta">
              <span class="lang">{repo.language}</span>
              <span class="stars">â˜… {repo.stargazers_count}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .github-projects {
    padding: 4rem 1rem;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  .card {
    display: block;
    background: #1a1a1a; /* Fallback dark bg */
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    animation: fade-in 0.6s ease-out forwards;
    animation-delay: var(--delay);
    border: 1px solid rgba(255,255,255,0.1);
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }
  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 2/1;
    object-fit: cover;
  }
  .content {
    padding: 1.5rem;
  }
  .meta {
    margin-top: 1rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
